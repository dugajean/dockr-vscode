{
	"name": "dockr-vscode",
	"displayName": "Dockr",
	"description": "Easily turn on or off your docker containers.",
	"version": "0.0.1",
	"publisher": "dugajean",
	"repository": {
		"type": "git",
		"url": "https://github.com/dugajean/dockr-vscode"
	},
	"bugs": {
		"url": "https://github.com/dugajean/dockr-vscode/issues"
	},
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"contributes": {
		"commands": [
			{
				"command": "dockr.up",
				"title": "Dockr: Start containers (up)"
			},
			{
				"command": "dockr.down",
				"title": "Dockr: Stop containers (down)"
			}
		],
		"configuration": {
            "title": "Dockr Configuration",
            "properties": {
                "dockr.dockrPath": {
                    "type": "string",
                    "default": "dockr",
					"description": "This will set the path to the dockr executable"
                }
            }
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc  -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^12.0.0",
		"@types/vscode": "^1.32.0",
		"typescript": "^3.4.5"
	}
}
